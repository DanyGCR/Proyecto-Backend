<div class="w-full h-screen flex flex-col items-center justify-center">

    <div class="bg-card w-full md:w-1/3 p-8 flex flex-col gap-4">
        <form class="flex flex-col items-center justify-center gap-4" id="form-signup" autocomplete="off">
            <h2 class="text-2xl font-extrabold uppercase">E-commerce</h2>

            <div class="w-full flex flex-col items-center justify-center gap-6">
                <div class="w-full grid grid-cols-1 gap-2">
                    <div class="grid grid-cols-1 gap-1">
                        <label class="text-neutral-400" for="first_name">First Name</label>
                        <input class="w-full p-2 outline-none focus:bg-neutral-600" type="text" name="first_name" placeholder="First name" required>
                    </div>
                    <div class="grid grid-cols-1 gap-1">
                        <label class="text-neutral-400" for="last_name">Last Name</label>
                        <input class="w-full p-2 outline-none focus:bg-neutral-600" type="text" name="last_name" placeholder="Last name">
                    </div>
                    <div class="grid grid-cols-1 gap-1">
                        <label class="text-neutral-400" for="age">Age</label>
                        <input class="w-full p-2 outline-none focus:bg-neutral-600" type="number" name="age">
                    </div>
                    <div class="grid grid-cols-1 gap-1">
                        <label class="text-neutral-400" for="email">Email</label>
                        <input class="w-full p-2 outline-none focus:bg-neutral-600" type="email" name="email" placeholder="email@example.com" required>
                    </div>
                    <div class="grid grid-cols-1 gap-1">
                        <label class="text-neutral-400" for="password">Password</label>
                        <input class="w-full p-2 outline-none focus:bg-neutral-600" type="password" name="password" placeholder="********" required>
                    </div>
                </div>
                <button class="bg-black py-2 px-8" type="submit">Signup</button>
            </div>
        </form>

        <div class="mt-4 text-center">
            <p class="text-neutral-400"> do you already have an account? </p>
            <a href="/signin">
                <button class="text-white">Sign in</button>
            </a>
        </div>
    </div>

</div>

<script type="module" src="/js/session/signup.js"></script>